{
  "name": "youtube-scrap-mcp",
  "version": "0.0.1",
  "description": "MCP server for extracting YouTube video content with transcript processing.",
  "author": "shiwoo.park",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/custardcream98/youtube-scrap-mcp.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "xmcp build",
    "dev": "xmcp dev",
    "start": "node dist/stdio.js",
    "lint": "node --max-old-space-size=4096 ./node_modules/.bin/eslint src",
    "lint:fix": "node --max-old-space-size=4096 ./node_modules/.bin/eslint src --fix",
    "format": "prettier --write src",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "xmcp": "latest",
    "zod": "3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "24.0.13",
    "eslint": "^9.31.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "swc-loader": "^0.2.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  },
  "main": "./dist/stdio.js",
  "files": [
    "dist"
  ],
  "bin": {
    "youtube-scrap-mcp": "./dist/stdio.js"
  }
}
